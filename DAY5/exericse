
EXERCISE-40
SELECT SID,SNAME,LOCATION FROM SALESMAN WHERE SNAME LIKE '%e%' AND LOCATION LIKE '%o%' UNION SELECT SID,SNAME,LOCATION FROM SALESMAN WHERE SNAME LIKE '%a%' AND LOCATION LIKE '%a%'
--ALTER SOLUTION--
SELECT SID,SNAME,LOCATION FROM SALESMAN WHERE (SNAME LIKE '%e%' AND LOCATION LIKE '%o%') OR (SNAME LIKE '%a%' AND LOCATION LIKE '%a%')

EXERCISE-41 
select prodid,pdesc,category,discount from product where discount<10 union ALL select prodid,pdesc,category,discount from product where category in ('Sports')

EXRCISE-42
SELECT PRODID,PDESC,CATEGORY,DISCOUNT FROM PRODUCT WHERE DISCOUNT<10 UNION SELECT PRODID,PDESC,CATEGORY,DISCOUNT FROM PRODUCT WHERE CATEGORY IN ('Sports')
--ALTER SOLUTION--
SELECT PRODID,PDESC,CATEGORY,DISCOUNT FROM PRODUCT WHERE DISCOUNT<10 OR CATEGORY IN ('Sports')

EXERCISI-43
SELECT 'S' AS TYPE, SID AS ID, SNAME AS DETAILS FROM SALESMAN UNION ALL
SELECT 'P' AS TYPE, PRODID AS ID, CATEGORY AS DETAILS FROM PRODUCT

PRACTISE--
SELECT MAKE,COUNT(*) AS "NUMBER OF COMPUTERS" FROM EMPLOYEE E INNER JOIN COMPUTER C ON E.COMPID=C.COMPID GROUP BY MAKE HAVING COUNT(*)>=2

EXERCISE-44
SELECT ID,ENAME,DEPT,C.COMPID,C.MAKE FROM EMPLOYEE E INNER JOIN COMPUTER C ON E.COMPID=C.COMPID

EXERCISE-45
SELECT ID,ENAME,E.COMPID,C.MAKE FROM EMPLOYEE E INNER JOIN COMPUTER C ON E.COMPID=C.COMPID WHERE MODEL IN ('Precision','Edge')

EXERCISE-46
SELECT DEPT ,COUNT(C.COMPID) AS "NUMBER OF COMPUTERS" FROM EMPLOYEE E INNER JOIN COMPUTER C ON E.COMPID=C.COMPID AND MAKE='Dell' GROUP BY DEPT

EXERCISE-47
SELECT S.SALEID,S.SLDATE FROM SALE S INNER JOIN SALESMAN SM ON S.SID=SM.SID WHERE SM.LOCATION = 'London' 

EXERCISE-48
SELECT S1.SID SID, S1.SNAME SNAME, S1.LOCATION LOCATION FROM SALESMAN S1 INNER JOIN SALESMAN S2 ON S1.LOCATION = S2.LOCATION WHERE S1.SID<>S2.SID

EXERCISE-49
SELECT SM.SNAME, S.SALEID FROM SALESMAN SM LEFT OUTER JOIN SALE S ON SM.SID=S.SID 

EXERCISE-50
SELECT SM.SID, SM.SNAME, SUM(SD.QUANTITY*I.PRICE) TAMOUNT, SUM((I.PRICE*SD.QUANTITY)*I.DISCOUNT/100) TDISCOUNT FROM SALESMAN SM INNER JOIN SALE S ON SM.SID=S.SID INNER JOIN SALEDETAIL SD ON S.SALEID=SD.SALEID INNER JOIN PRODUCT I ON SD.PRODID=I.PRODID GROUP BY SM.SID,SM.SNAME ORDER BY TAMOUNT DESC, TDISCOUNT DESC

EXERCISE-51
SELECT SD.SALEID,SD.PRODID,SM.SID, SM.SNAME FROM SALESMAN SM INNER JOIN SALE S ON SM.SID=S.SID INNER JOIN SALEDETAIL SD ON S.SALEID=SD.SALEID INNER JOIN PRODUCT I ON SD.PRODID=I.PRODID 

EXERCISE-52
SELECT SM.SID, SM.SNAME, NVL(SUM(SD.QUANTITY*I.PRICE),0) TAMOUNT, NVL(SUM((I.PRICE*SD.QUANTITY)*I.DISCOUNT/100),0) TDISCOUNT FROM SALESMAN SM LEFT OUTER JOIN SALE S ON SM.SID=S.SID LEFT OUTER JOIN  SALEDETAIL SD ON S.SALEID=SD.SALEID LEFT OUTER JOIN PRODUCT I ON SD.PRODID=I.PRODID GROUP BY SM.SID,SM.SNAME 

EXERICE-53
SELECT SM.LOCATION,P.CATEGORY,SUM(SD.QUANTITY) "Total Quantity" FROM SALESMAN SM INNER JOIN SALE S ON SM.SID=S.SID INNER JOIN SALEDETAIL SD ON S.SALEID=SD.SALEID INNER JOIN PRODUCT P ON SD.PRODID=P.PRODID GROUP BY SM.LOCATION,P.CATEGORY

EXERCISE-54
SELECT E.ENAME,E.DEPT,NVL(C.MODEL,'Not allocated') MODEL FROM EMPLOYEE E LEFT OUTER JOIN COMPUTER C ON E.COMPID=C.COMPID

EXERCISE-55
SELECT E.ID,E.ENAME,E.DEPT,C.MODEL FROM EMPLOYEE E FULL OUTER JOIN COMPUTER C ON E.COMPID=C.COMPID

EXERCISE-56
SELECT E.ID,E.ENAME,M.ID MGRID,M.ENAME MGRNAME, EC.MODEL E_MODEL,MC.MODEL  M_MODEL FROM EMPLOYEE E INNER JOIN EMPLOYEE M ON E.MANAGER=M.ID INNER JOIN COMPUTER EC ON E.COMPID=EC.COMPID INNER JOIN COMPUTER MC ON M.COMPID=MC.COMPID

EXERCISE-57
SELECT SID, SNAME FROM SALESMAN WHERE SID NOT IN (SELECT SID FROM SALE)

EXERCISE-58 
SELECT P.PRODID,P.CATEGORY,P.PRICE FROM PRODUCT P INNER JOIN PRODUCT P2 ON P.PRICE=P2.PRICE WHERE P.PRODID<>P2.PRODID
